{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "jsx": "react",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "module": "commonjs",
      "target": "es6",
      "noEmit": true,
      "types": [
        "jest",
        "@testing-library/jest-dom"
      ]
    },
    "include": [
      "**/*.test.ts",
      "**/*.test.tsx"
    ],
    "exclude": [
      "node_modules",
      ".next"
    ]
  }